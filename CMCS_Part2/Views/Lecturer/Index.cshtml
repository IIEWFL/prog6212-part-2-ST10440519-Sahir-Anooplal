@model IEnumerable<Lecturer>
@{
    ViewData["Title"] = "Manage Lecturers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Manage Lecturers</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Lecturer</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Back to Home</a>
</div>