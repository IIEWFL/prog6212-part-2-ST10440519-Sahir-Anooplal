@model List<Lecturer>
@{
    ViewData["Title"] = "Select User";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center mb-0">Select Your Profile</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="text-center mb-4">Lecturers</h4>
                        @if (Model.Any())
                        {
                            <form method="post">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Choose your identity:</label>
                                    <select name="lecturerId" class="form-select" required>
                                        <option value="">-- Select Lecturer --</option>
                                        @foreach (var lecturer in Model)
                                        {
                                            <option value="@lecturer.Id">@lecturer.Name - @lecturer.Email</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Continue as Lecturer</button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                No lecturers found. Please <a href="@Url.Action("Create", "Lecturer")">add a lecturer</a> first.
                            </div>
                        }
                    </div>

                    <div class="col-md-6 border-start">
                        <h4 class="text-center mb-4">Administrative Roles</h4>
                        <div class="d-grid gap-3">
                            <a href="@Url.Action("Index", "Approval")" class="btn btn-warning btn-lg">
                                Programme Coordinator
                            </a>
                            <a href="@Url.Action("Index", "Approval")" class="btn btn-warning btn-lg">
                                Academic Manager
                            </a>
                            <a href="@Url.Action("Index", "Lecturer")" class="btn btn-info btn-lg">
                                System Administrator
                            </a>
                        </div>
                        <div class="mt-3 text-muted text-center">
                            <small>Administrative roles have access to all claims and lecturer management.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>